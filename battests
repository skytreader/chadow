# vim: set ft=sh:

setup() {
    ./install
}

@test "test that config.json exists after setup" {
    ls ~/.chadow/config.json
    config_ver=`jq .version ~/.chadow/config.json | sed 's/"//g'`
    repo_ver=`head -n 1 VERSION`
    echo "$config_ver vs $repo_ver"
    [ "$config_ver" == "$repo_ver" ]
}

teardown() {
    ./uninstall
}
